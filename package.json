{
  "name": "ricette-gustose",
  "version": "0.0.1",
  "description": "Ricette Gustose",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd ./app/frontend/ && npm run dev",
    "dev:backend": "cd ./app/server/ && npm run dev",    
    "start": "node ./app/server/dist/index",
    "build:all": "npm run build:frontend && npm run build:backend && cd ./app/server && npm start",
    "build:frontend": "cd ./app/frontend/ && npm run build && @powershell Copy-Item ./dist/* -Recurse -Force ../../build",
    "build:backend": "cd ./app/server/ && npm run build",
    "test": "echo \"Error: no test specified\"",
    "lint": "cd ./app/server/ && npm run lint && cd ../../app/frontend/ && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "author": "Alessandro Bellu",
  "license": "MIT"
}
